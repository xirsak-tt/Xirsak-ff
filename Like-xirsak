import os
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, ContextTypes

# –¢–æ–∫–µ–Ω –∞–∑ –º—É“≥–∏—Ç–∏ —Å–µ—Ä–≤–µ—Ä –≥–∏—Ä–∏—Ñ—Ç–∞ –º–µ—à–∞–≤–∞–¥
TOKEN = os.getenv("TOKEN")

async def like_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if len(context.args) < 2:
        await update.message.reply_text("‚ùå –ò—Å—Ç–∏—Ñ–æ–¥–∞: /like <—Å–µ—Ä–≤–µ—Ä> <–∞–π–¥–∏>")
        return
    
    server = context.args[0]
    player_id = context.args[1]
    
    await update.message.reply_text(
        f"üëç –õ–∞–π–∫ –±–∞ ID: {player_id} –¥–∞—Ä —Å–µ—Ä–≤–µ—Ä {server} —Ñ–∏—Ä–∏—Å—Ç–æ–¥–∞ —à—É–¥!"
    )

async def start_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("–°–∞–ª–æ–º! –§–∞—Ä–º–æ–Ω –Ω–∞–≤–∏—Å: /like <—Å–µ—Ä–≤–µ—Ä> <–∞–π–¥–∏>")

app = ApplicationBuilder().token(TOKEN).build()

app.add_handler(CommandHandler("start", start_command))
app.add_handler(CommandHandler("like", like_command))

print("–ë–æ—Ç –∫–æ—Ä –º–µ–∫—É–Ω–∞–¥...")
app.run_polling()
